@model System.Collections.Generic.IEnumerable<Curate.Data.Models.Collection>

@{
    ViewBag.Title = "Collections";
    Layout = "_Layout";
}
@section Styles{
    @await Html.PartialAsync("_DatatablesStyles")
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Collections</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active">Collections</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a href="@Url.Action("Add","Collection")" class="btn btn-success float-right">Create</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="tblCollections" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Url</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var collection in Model)
                                {
                                    <tr>
                                        <td>@collection.Title</td>
                                        <td>@collection.StartDate</td>
                                        <td>@collection.EndDate</td>
                                        <td>@collection.Slug</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Title</th>
                                    <th>Blurb</th>
                                    <th>Last Modified</th>
                                    <th>Url</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
@section Scripts{
    @await Html.PartialAsync("_DatatablesScripts")
    <!-- Page specific script -->
    <script>
    $(function () {
      $("#tblChannels").DataTable({
        "responsive": true, "lengthChange": true, "autoWidth": true,
      }).buttons().container().appendTo('#tblCollections_wrapper .col-md-6:eq(0)');
    });
    </script>
}

